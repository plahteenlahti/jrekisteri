<!DOCTYPE html>
<html>
<head>
  <title>Jrekisteri</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <ul id="dropdown1" class="dropdown-content">
      <li><%= current_user %></li>
      <li class="divider"></li>
      <li><%= link_to 'Profile', current_user%></li>
      <li><%= link_to 'Signout', signout_path%></li>
    </ul>
    <nav>
      <div class="nav-wrapper">
        <div class="container">
            <%= link_to 'Jäsenrekisteri', root_path ,class:'brand-logo' %>
            <ul id="nav-mobile" class="right hide-on-med">
              <li><%= link_to 'Käyttäjät', users_path %></li>
              <li><%= link_to 'Järjestöt', organizations_path %></li>
              <% if not current_user.nil? %>
                  <li><a class="dropdown-button" href="#!" data-activates="dropdown1"><%= current_user %><i class="mdi-navigation-arrow-drop-down right"></i></a></li>
                  <% else %>
                  <li><%= link_to 'Signin', signin_path %></li>
                  <li><%= link_to 'Signup', signup_path %></li>
              <% end %>
            </ul>
        </div>
      </div>
    </nav>
    <main>
        <div class="container">
            <%= yield %>
        </div>
    </main>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

</body>
</html>